#!/bin/bash

set -e

SCRIPT_PATH="$(realpath "$0")"

# === VÃ©rification des droits ===
if [ "$EUID" -ne 0 ]; then
  echo "Ce script doit Ãªtre exÃ©cutÃ© en root." >&2
  exit 1
fi

echo "[ðŸ§¨] Suppression de WireGuard et FRP..."

# === ArrÃªter et dÃ©sactiver les services ===
systemctl stop wg-quick@wg0 || true
systemctl disable wg-quick@wg0 || true

systemctl stop frps || true
systemctl disable frps || true
rm -f /etc/systemd/system/frps.service

systemctl daemon-reload

# === Supprimer les fichiers WireGuard ===
rm -rf /etc/wireguard

# === Supprimer FRP ===
rm -rf /opt/frp

# === Supprimer les rÃ¨gles UFW spÃ©cifiques ===
echo "[ðŸ§¹] Nettoyage du pare-feu..."
ufw delete allow 51820/udp || true
ufw delete allow in on wg0 || true
ufw delete allow out on wg0 || true

BLOCKED_PORTS=(22 23 3389)
for port in "${BLOCKED_PORTS[@]}"; do
  ufw delete deny $port || true
done

# === Supprimer le fichier de configuration sysctl ===
rm -f /etc/sysctl.d/99-wg-forward.conf
sysctl -w net.ipv4.ip_forward=0

# === Supprimer les paquets installÃ©s ===
echo "[ðŸ§¹] Suppression des paquets installÃ©s..."
apt purge -y wireguard ufw
apt autoremove -y
apt clean

echo "[ðŸ—‘] Suppression des script."
rm add.sh
rm remove.sh
rm -f "${SCRIPT_PATH}"

echo "[âœ…] Suppression complÃ¨te terminÃ©e."

echo "[âœ…] Installation de l'installer."
wget -qO- https://raw.githubusercontent.com/ShuNeko/proxy-setup/refs/heads/main/setup> start.sh
chmod +x ./start.sh
